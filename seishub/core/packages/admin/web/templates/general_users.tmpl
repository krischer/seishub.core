<h1>Users</h1>

#if $action=='add'
<h2>Add new user</h2>
<form method="post" id="add" action="">
  <div class="field">
    <label>User ID</label><br />
    <input type="text" size="20" name="id" value="$id" />
  </div>
  <div class="field">
    <label>UID</label><br />
    <input type="text" size="20" name="uid" value="$uid" />
  </div>
  <div class="field">
    <label>Name</label><br />
    <input type="text" size="80" name="name" value="$name" />
  </div>
  <div class="field">
    <label>Password</label><br />
    <input type="password" size="20" name="password" value="" />
  </div>
  <div class="field">
    <label>Password Confirmation</label><br />
    <input type="password" size="20" name="confirmation" value="" />
  </div>
  <div class="field">
    <label>E-Mail</label><br />
    <input type="text" size="80" name="email" value="$email" />
  </div>
  <div class="field">
    <label>Institution</label><br />
    <input type="text" size="80" name="institution" value="$institution" />
  </div>
  <div class="field">
    <label>Permissions</label><br />
    <select name="permissions">
      <option value="777"
        #if $permissions==777
        selected="selected"
        #end if
        >RW</option>
      <option value="755"
        #if $permissions==755
        selected="selected"
        #end if
        >R-</option>
      <option value="700"
        #if $permissions==700
        selected="selected"
        #end if
        >--</option>
    </select>
  </div>
  <div class="button">
    <input type="submit" name="add" value="Add" />
    <input type="submit" name="cancel" value="Cancel" />
  </div>
</form>

<br />
<br />
#end if


#if $action=='edit'
<h2>Edit user &quot;$id&quot;</h2>
<form method="post" id="edit" action="">
  <div class="field">
    <label>User ID</label><br />
    <input type="text" size="80" name="id" value="$id" readonly="readonly" />
  </div>
#if $id!='anonymous'
  <div class="field">
    <label>User UID</label><br />
    <input type="text" size="80" name="uid" value="$uid" />
  </div>
  <div class="field">
    <label>Name</label><br />
    <input type="text" size="80" name="name" value="$name" />
  </div>
  <div class="field">
    <label>Password</label><br />
    <input type="password" size="20" name="password" value="" />
  </div>
  <div class="field">
    <label>Password Confirmation</label><br />
    <input type="password" size="20" name="confirmation" value="" />
  </div>
  <div class="field">
    <label>E-Mail</label><br />
    <input type="text" size="80" name="email" value="$email" />
  </div>
  <div class="field">
    <label>Institution</label><br />
    <input type="text" size="80" name="institution" value="$institution" />
  </div>
#end if
#if $id=='anonymous'
  <input type="hidden" name="uid" value="$uid" />
  <input type="hidden" name="name" value="$name" />
#end if
  <div class="field">
    <label>Permissions</label><br />
    <select name="permissions">
#if $id!='anonymous'
      <option value="777"
        #if $permissions==777
        selected="selected"
        #end if
        >RW</option>
#end if
      <option value="755"
        #if $permissions==755
        selected="selected"
        #end if
        >R-</option>
      <option value="700"
        #if $permissions==700
        selected="selected"
        #end if
        >--</option>
    </select>
  </div>
  <div class="button">
    <input type="submit" name="edit" value="Save" />
    <input type="submit" name="cancel" value="Cancel" />
  </div>
</form>

<br />
<br />
#end if


#if not $action
<h2>List of all users</h2>
<form method="post" id="list" action="">
  <table class="list">
    <tr>
      <th></th>
      <th>ID</th>
      <th>User Name</th>
      <th>Real Name</th>
      <th>E-Mail</th>
      <th>Institution</th>
      <th>Groups</th>
    </tr>
    #for $user in $users
    <tr>
      <td>
        <input type="radio" name="id" value="$user.user_name" />
      </td>
      <td>$user.id</td>
      <td>$user.user_name</td>
      <td>$user.real_name</td>
      <td>
        #if $user.email
        <a href="mailto:$user.email">$user.email</a>
        #end if
      </td>
      <td>$user.institution</td>
      <td>$user.groups</td>
    </tr>
    #end for
  </table>

  <div class="button">
    <input type="submit" name="add-user" value="Add" />
    <input type="submit" name="edit-user" value="Edit" />
    <input type="submit" name="delete" value="Delete"
        onclick="return confirm('Are you sure you want to delete the user?')" />
  </div>
</form>
#end if
